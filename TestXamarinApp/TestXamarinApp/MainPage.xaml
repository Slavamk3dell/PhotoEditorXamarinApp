<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestXamarinApp.MainPage"
            xmlns:local="clr-namespace:TestXamarinApp"
            NavigationPage.HasNavigationBar="false"
            BarBackgroundColor="Black"
            SelectedTabColor="#3cbdfe"
            UnselectedTabColor= "White"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom">

    <NavigationPage Title="Filters" IconImageSource="filters.png">
        <x:Arguments>
            <local:Filters Title="Filters" IconImageSource="filters.png"/>
        </x:Arguments>

        <NavigationPage.BarBackgroundColor>
            <Color>#000000</Color>
        </NavigationPage.BarBackgroundColor>

        <NavigationPage.BarTextColor>
            <Color>#3cbdfe</Color>
        </NavigationPage.BarTextColor>
    </NavigationPage>

    <ContentPage Title="Other" IconImageSource="saveButton2.png">
        <Label Text="А здесь пока ничего нет"
               FontSize="25"
               VerticalOptions="Center"
               HorizontalOptions="Center"></Label>
    </ContentPage>
</TabbedPage>
